doctype html
head
    meta(charset='UTF-8')
    title PUG
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
h1 PUG
form(action='/productos' method='POST')
    .form-group
        label(for='name')
            b Producto
        input#name.form-control(type='text' name='name')
    .form-group
        label(for='precio')
            b Precio
        input#price.form-control(type='number' name='price')
    .form-group
        label(for='image')
            b URL Imagen
        input#url.form-control(type='text' name='url')
    button.btn.btn-success.mt-3.mb-5 Enviar
form(action='/productos' method='GET')
    button.btn.btn-success.mt-3.mb-5 Ver Productos
